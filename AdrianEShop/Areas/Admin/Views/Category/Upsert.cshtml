@model AdrianEShop.Models.ViewModels.Category.CategoryUpsertVM

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@Model.PageTitle</h2>
        </div>
        <div class="col-8 pt-4">
            @if (Model.Category.Id != Guid.Empty)
            {
                <input type="hidden" asp-for="Category.Id" />
            }
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Category.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Category.Name" class="form-control" />
                    <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (@Model.Category.Id != Guid.Empty)
                    {
                        <partial name="_EditAndBackToListButton" model="@Model.Category.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>